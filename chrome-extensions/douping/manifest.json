{
	"manifest_version": 2,
	"name": "豆评",
	"version": "1.0",
	"description": "豆评",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["http://www.amazon.cn/*"],
			"run_at": "document_idle",
			"js": ["jquery-2.1.0.min.js", "content.js"]
		}
	],
	"permissions": ["tabs", "notifications", "http://*/*", "https://*/*"]
}